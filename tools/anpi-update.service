[Unit]
Description=Pull latest code for anpi-watch (run as ito)
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
User=ito
Group=ito
WorkingDirectory=/home/ito/anpi-watch
Environment="PATH=/usr/local/bin:/usr/bin:/bin"
ExecStart=/usr/bin/sh /usr/local/bin/anpi-update.sh